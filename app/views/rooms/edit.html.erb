<div class="room_wrapper">
  <div class="room-title">
    <h2>EDIT OPENBBS</h2>
  </div>
  <div class="room-form">
    <%= form_with(model: @room, local: true) do |f| %>
      <div class="room-form__image field">
        <label for="room_image" class="room-form__image__label">
          <%= image_tag 'default.jpg' %>
          <i class="fas fa-camera"></i>
          <%= f.file_field :image %>
        </label>
      </div>
      <div class="room-form__title field">
        <%= f.text_field :title, required: "required", placeholder: "タイトルを入力" %>
        <%= render partial: "/shared/error", locals: { key: :title} %>
      </div>
      <div class="room-form__description field">
        <%= f.text_area :description, required: "required", placeholder: "説明文を入力"%>
        <%= render partial: "/shared/error", locals: { key: :description} %>
      </div>
      <div class="category__checkbox">
        <h2>カテゴリー</h2>
      </div>
      <%= render partial: "/shared/error", locals: { key: :category_ids } %>
      <div class="room-form__category field">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, required: "required", include_hidden: false %>
      </div>
      <div class="room-form__submit actions">
        <%= f.submit 'EDIT ROOM', class: "send-btn" %>
      </div>
    <% end %>
  </div>
  <footer>
    <div class="pagetop-btn">
      <div id="page_top"><a href="#"></a></div>
    </div>
  </footer>
</div>